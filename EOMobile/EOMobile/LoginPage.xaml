<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EOMobile"
             x:Class="EOMobile.LoginPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Elegant Orchids" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

        <Label Text="Name"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
        <Editor x:Name="Name"
                HeightRequest="100"
                WidthRequest="300"/>
        <Label Text="Password"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
        <Editor x:Name="Password"
                HeightRequest="100" 
                WidthRequest="300"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Save"
                    HeightRequest="100"
                    WidthRequest="300"
                    Clicked="OnSaveButtonClicked" />
        </Grid>
    </StackLayout>

</ContentPage>
